@{
    ViewBag.Title = "Guía de Regalos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space inv-page">
    <div class="container inv-container">

        <!-- Header -->
        <div class="inv-header">
            <h2 class="inv-title">Guía de Regalos 🎁</h2>
            <p class="inv-subtitle">
                Encuentra el regalo ideal según la ocasión, presupuesto y estilo ✨
            </p>
        </div>

        <!-- Filtros -->
        <div class="inv-filters mb-4">
            <form class="row g-3">

                <div class="col-md-3">
                    <label class="form-label">Ocasión</label>
                    <select class="form-select">
                        <option>Todas</option>
                        <option>Cumpleaños</option>
                        <option>Aniversario</option>
                        <option>Elegante</option>
                        <option>Casual</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Presupuesto</label>
                    <select class="form-select">
                        <option>Todos</option>
                        <option>Bajo</option>
                        <option>Intermedio</option>
                        <option>Alto</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Género</label>
                    <select class="form-select">
                        <option>Todos</option>
                        <option>Femenino</option>
                        <option>Masculino</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Tipo</label>
                    <select class="form-select">
                        <option>Todos</option>
                        <option>Maquillaje</option>
                        <option>Skincare</option>
                        <option>Perfumes</option>
                        <option>Joyas</option>
                        <option>Bolsos</option>
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn inv-btn w-100">
                        Filtrar 🔍
                    </button>
                </div>

            </form>
        </div>

        <!-- Tabla -->
        <div class="inv-table-wrap">
            <table class="table table-striped inv-table align-middle">
                <thead>
                    <tr>
                        <th>Regalo</th>
                        <th>Ocasión</th>
                        <th>Tipo</th>
                        <th>Presupuesto</th>
                        <th>Género</th>
                        <th>Estado</th>
                        <th style="width:340px;">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    <!-- Fila ejemplo -->
                    <tr>
                        <td>
                            <strong style="color:#5c3b6f;">
                                Kit de Skincare Deluxe
                            </strong>
                        </td>

                        <td>Aniversario</td>
                        <td>Skincare</td>
                        <td>Alto</td>
                        <td>Femenino</td>

                        <td>
                            <span class="inv-chip inv-chip-ok">
                                Activo
                            </span>
                        </td>

                        <td>
                            <div class="inv-actions">
                                <a class="btn inv-btn">
                                    Editar ✏️
                                </a>

                                <a class="btn inv-btn inv-btn-soft">
                                    Desactivar 🚫
                                </a>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <strong style="color:#5c3b6f;">
                                Perfume Elegance Homme
                            </strong>
                        </td>

                        <td>Cumpleaños</td>
                        <td>Perfumes</td>
                        <td>Intermedio</td>
                        <td>Masculino</td>

                        <td>
                            <span class="inv-chip inv-chip-low">
                                Inactivo
                            </span>
                        </td>

                        <td>
                            <div class="inv-actions">
                                <a class="btn inv-btn">
                                    Editar ✏️
                                </a>

                                <a class="btn inv-btn inv-btn-soft">
                                    Activar ✅
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Botón Admin -->
        <div class="mt-4 text-end">
            <a class="btn inv-btn">
                Agregar regalo ➕
            </a>
        </div>

    </div>
</section>
