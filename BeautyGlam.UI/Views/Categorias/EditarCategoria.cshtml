@model BeautyGlam.Abstracciones.ModelosParaUI.CategoriasDto

@{
    ViewBag.Title = "Editar Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space sup-page">
    <div class="container sup-container">

        <div class="sup-header">
            <h2 class="sup-title">Editar Categoría</h2>
            <p class="sup-subtitle">Actualiza la información de la categoría ✏️</p>
        </div>

        <div class="sup-card">
            <div class="sup-card-head">
                <span class="sup-badge">Edición</span>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.id)

                <div class="sup-form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(model => model.nombre, new { @class = "sup-label" })
                        @Html.EditorFor(model => model.nombre,
                            new { htmlAttributes = new { @class = "form-control sup-input" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.descripcion, new { @class = "sup-label" })
                        @Html.EditorFor(model => model.descripcion,
                            new { htmlAttributes = new { @class = "form-control sup-input" } })
                        @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.estado, new { @class = "sup-label" })
                        <div>
                            @Html.CheckBoxFor(model => model.estado)
                            @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="sup-actions mt-4">
                        <button type="submit" class="sup-btn">
                            Guardar Cambios ✨
                        </button>

                        <a href="@Url.Action("ListaDeCategorias")"
                           class="sup-btn sup-btn-soft">
                            Cancelar
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
