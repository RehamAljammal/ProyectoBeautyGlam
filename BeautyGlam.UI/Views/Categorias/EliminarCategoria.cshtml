@model BeautyGlam.Abstracciones.ModelosParaUI.CategoriasDto

@{
    ViewBag.Title = "Eliminar Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space sup-page">
    <div class="container sup-container">

        <div class="sup-header">
            <h2 class="sup-title">Eliminar Categoría</h2>
            <p class="sup-subtitle">Confirma si deseas inactivar esta categoría 🗑️</p>
        </div>

        <div class="sup-card">
            <div class="sup-card-head">
                <span class="sup-badge">Confirmación</span>
            </div>

            <div class="sup-form">

                <p><strong>Nombre:</strong> @Model.nombre</p>
                <p><strong>Descripción:</strong> @Model.descripcion</p>
                <p>
                    <strong>Estado actual:</strong>
                    @if (Model.estado)
                    {
                        <span class="sup-chip sup-chip-ok">Activo</span>
                    }
                    else
                    {
                        <span class="sup-chip sup-chip-off">Inactivo</span>
                    }
                </p>

                <hr />

                <p style="color:#7a1f2d; font-weight:700;">
                    ⚠️ Esta acción cambiará el estado de la categoría.
                </p>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="sup-actions mt-4">
                        <button type="submit" class="sup-btn sup-btn-danger">
                            Confirmar 🗑️
                        </button>

                        <a href="@Url.Action("ListaDeCategorias")"
                           class="sup-btn sup-btn-soft">
                            Cancelar
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
