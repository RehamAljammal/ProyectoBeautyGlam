@{
    ViewBag.Title = "Permisos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space perm-page">
    <div class="container perm-container">

        <div class="perm-header">
            <h2 class="perm-title">Permisos del Sistema</h2>
            <p class="perm-subtitle">Crea y gestiona permisos por módulo ✨</p>
        </div>

        <div class="perm-card">
            <div class="perm-card-head">
                <div>
                    <span class="perm-badge">Administración</span>
                </div>

                <a href="/Permisos/Create" class="perm-btn">
                    + Crear Permiso
                </a>
            </div>

            <div class="perm-table-wrap table-responsive">
                <table class="table table-striped align-middle perm-table">
                    <thead>
                        <tr>
                            <th>Permiso</th>
                            <th>Módulo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td><strong style="color:#5c3b6f;">Crear Usuario</strong></td>
                            <td><span class="perm-chip perm-chip-soft">Usuarios</span></td>
                            <td class="text-end">
                                <a href="/Permisos/Edit/1" class="perm-btn perm-btn-soft perm-btn-sm">
                                    Editar ✏️
                                </a>
                            </td>
                        </tr>

                        <tr>
                            <td><strong style="color:#5c3b6f;">Editar Productos</strong></td>
                            <td><span class="perm-chip perm-chip-mint">Productos</span></td>
                            <td class="text-end">
                                <a href="/Permisos/Edit/2" class="perm-btn perm-btn-soft perm-btn-sm">
                                    Editar ✏️
                                </a>
                            </td>
                        </tr>

                        <tr>
                            <td><strong style="color:#5c3b6f;">Ver Reservas</strong></td>
                            <td><span class="perm-chip perm-chip-soft">Reservas</span></td>
                            <td class="text-end">
                                <a href="/Permisos/Edit/3" class="perm-btn perm-btn-soft perm-btn-sm">
                                    Editar ✏️
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</section>
