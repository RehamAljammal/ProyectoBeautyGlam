@{
    ViewBag.Title = "Editar Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space perm-page">
    <div class="container perm-container">

        <div class="perm-header">
            <h2 class="perm-title">Editar Permiso</h2>
            <p class="perm-subtitle">Actualiza el nombre y el módulo asignado ✨</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-7">

                <div class="perm-card">

                    <div class="perm-card-head">
                        <div>
                            <span class="perm-badge">Edición</span>
                        </div>
                    </div>

                    <div class="perm-form">
                        <form>

                            <div class="mb-3">
                                <label class="perm-label">Nombre del Permiso</label>
                                <input type="text" class="form-control perm-input" value="Crear Usuario" />
                            </div>

                            <div class="mb-3">
                                <label class="perm-label">Módulo</label>
                                <select class="form-select perm-input">
                                    <option selected>Usuarios</option>
                                    <option>Productos</option>
                                    <option>Ventas</option>
                                    <option>Reservas</option>
                                </select>
                            </div>

                            <div class="perm-actions mt-3">
                                <button class="perm-btn" type="button">Guardar Cambios 💾</button>
                                <a href="/Permisos" class="perm-btn perm-btn-soft">Cancelar</a>
                            </div>

                        </form>
                    </div>

                </div>

            </div>
        </div>

    </div>
</section>
