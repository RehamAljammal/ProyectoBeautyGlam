@model BeautyGlam.Abstracciones.ModelosParaUI.RolDto

@{
    ViewBag.Title = "Editar Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space roles-page">
    <div class="container roles-container">

        <div class="roles-top roles-top-center">
            <div class="text-center">
                <h2 class="roles-title">Editar Rol</h2>
                <p class="roles-subtitle">Actualiza el nombre o estado del rol ✨</p>
            </div>
        </div>

        <div class="roles-card roles-form-card">

            @using (Html.BeginForm("EditarRol", "Rol", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(m => m.id_Rol)

                <div class="mb-3">
                    <label class="form-label roles-label">ID</label>
                    <input class="form-control roles-input" value="@Model.id_Rol" disabled />
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.nombre_Rol, new { @class = "form-label roles-label" })
                    @Html.TextBoxFor(m => m.nombre_Rol, new { @class = "form-control roles-input" })
                    @Html.ValidationMessageFor(m => m.nombre_Rol, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label roles-label">Estado</label>
                    <div class="d-flex align-items-center gap-2">
                        @Html.CheckBoxFor(m => m.estado)
                        <span style="color:#6b4c7a;font-weight:700;">Activo</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.estado, "", new { @class = "text-danger" })
                </div>

                <div class="roles-form-actions">
                    <button type="submit" class="btn roles-btn">Guardar Cambios</button>
                    <a href="@Url.Action("ListaDeRoles","Rol")" class="btn roles-btn-soft">Cancelar</a>
                </div>
            }

        </div>

    </div>
</section>

<style>
    .roles-container {
        max-width: 820px;
        margin: 0 auto;
    }

    .roles-top-center {
        justify-content: center;
    }

    .roles-card.roles-form-card {
        padding: 18px 18px 20px;
        background: #ffffff;
        border: 1px solid #f2e6f3;
        border-radius: 26px;
        box-shadow: 0 20px 45px rgba(180,120,180,.12);
        overflow: hidden;
    }

    .roles-label {
        font-weight: 900;
        color: #5c3b6f;
        margin-bottom: 6px;
    }

    .roles-input {
        border-radius: 16px;
        border: 1px solid #ead7f3;
        padding: 12px 14px;
    }

    .roles-form-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        flex-wrap: wrap;
        margin-top: 14px;
    }

    .roles-btn {
        padding: 10px 18px;
        border-radius: 999px;
        background: linear-gradient(135deg, #ffb7d5, #cdb7ff, #b9f0e2);
        font-weight: 900;
        border: none;
        color: #4b2b4b;
        box-shadow: 0 14px 32px rgba(200,150,220,.35);
        transition: .2s ease;
        text-decoration: none;
    }

        .roles-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 18px 44px rgba(200,150,220,.45);
        }

    .roles-btn-soft {
        padding: 10px 18px;
        border-radius: 999px;
        background: #fff;
        border: 1px solid #ead7f3;
        color: #5c3b6f;
        font-weight: 900;
        text-decoration: none;
        box-shadow: 0 14px 32px rgba(200,150,220,.12);
        transition: .2s ease;
    }

        .roles-btn-soft:hover {
            transform: translateY(-1px);
            box-shadow: 0 18px 44px rgba(200,150,220,.18);
        }
</style>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

