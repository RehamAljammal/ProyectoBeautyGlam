@model BeautyGlam.Abstracciones.ModelosParaUI.LoginDTO

@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content auth-page">

    <section class="page-header-area pt-10 pb-9 auth-header" data-bg-color="#DFE4FF">
        <div class="container text-center">
            <h2 class="page-header-title auth-title">Iniciar Sesión</h2>
            <p class="auth-subtitle mb-0">Accede a tu cuenta para continuar</p>
        </div>
    </section>

    <section class="section-space">
        <div class="container">

            <div class="auth-card mx-auto">
                <div class="auth-card-head">
                    <span class="auth-badge">Bienvenido/a</span>
                    <h3 class="auth-card-title mb-1">Ingresa tus datos</h3>
                    <p class="auth-card-desc mb-0">Asegúrate de usar el correo con el que te registraste.</p>
                </div>

                @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "auth-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.correo, new { @class = "form-label auth-label" })
                        @Html.TextBoxFor(m => m.correo, new { @class = "form-control auth-input", type = "email", placeholder = "example@gmail.com" })
                        @Html.ValidationMessageFor(m => m.correo, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.contrasena, new { @class = "form-label auth-label" })
                        @Html.PasswordFor(m => m.contrasena, new { @class = "form-control auth-input", placeholder = "Ingrese su contraseña" })
                        @Html.ValidationMessageFor(m => m.contrasena, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <a href="@Url.Action("RecuperarContrasena","Auth")" class="auth-link">¿Olvidaste tu contraseña?</a>
                    </div>

                    <button type="submit" class="btn auth-btn w-100 py-2 mb-3">Ingresar</button>

                    <div class="text-center auth-footer">
                        <span class="auth-muted">¿No tienes cuenta?</span>
                        <a href="@Url.Action("Register","Auth")" class="auth-link fw-bold ms-1">Registrarse</a>
                    </div>
                }

            </div>

        </div>
    </section>

</main>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
