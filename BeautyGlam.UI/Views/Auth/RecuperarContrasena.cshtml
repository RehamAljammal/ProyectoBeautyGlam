@model BeautyGlam.Abstracciones.ModelosParaUI.RecuperarContrasenaDTO

@{
    ViewBag.Title = "Recuperar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content auth-page">

    <section class="page-header-area pt-10 pb-9 auth-header" data-bg-color="#DFE4FF">
        <div class="container text-center">
            <h2 class="page-header-title auth-title">Recuperar contraseña</h2>
            <p class="auth-subtitle mb-0">Te generamos un token para restablecer tu contraseña</p>
        </div>
    </section>

    <section class="section-space">
        <div class="container">

            <div class="auth-card mx-auto">
                <div class="auth-card-head">
                    <span class="auth-badge">Recuperación</span>
                    <h3 class="auth-card-title mb-1">Ingresa tu correo</h3>
                    <p class="auth-card-desc mb-0">Si el correo existe, generaremos un token (modo demo).</p>
                </div>

                @if (TempData["Msg"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["Msg"]
                    </div>
                }

                @using (Html.BeginForm("RecuperarContrasena", "Auth", FormMethod.Post, new { @class = "auth-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.correo, new { @class = "form-label auth-label" })
                        @Html.TextBoxFor(m => m.correo, new { @class = "form-control auth-input", type = "email", placeholder = "example@gmail.com" })
                        @Html.ValidationMessageFor(m => m.correo, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn auth-btn w-100 py-2 mb-3">Enviar correo para restablecer</button>

                    <div class="text-center auth-footer">
                        <a href="@Url.Action("Login","Auth")" class="auth-link fw-bold">Volver a iniciar sesión</a>
                    </div>
                }

            </div>

        </div>
    </section>

</main>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
