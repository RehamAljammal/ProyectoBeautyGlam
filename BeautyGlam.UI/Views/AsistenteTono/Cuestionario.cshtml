@{
    ViewBag.Title = "Asistente de Tono";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space tone-page">
    <div class="container tone-container">

        <div class="tone-header">
            <h2 class="tone-title">Asistente de Tono</h2>
            <p class="tone-subtitle">
                Responde según tu experiencia real. No hay respuestas correctas o incorrectas.
            </p>
        </div>

        <div class="tone-card">
            <div class="tone-card-head">
                <span class="tone-badge">Cuestionario</span>
                <h3 class="tone-card-title">Descubre tu subtono</h3>
                <p class="tone-card-desc">Elige la opción que más se parezca a ti.</p>
            </div>

            <div class="tone-card-body">

                <div class="tone-q">
                    <div class="tone-q-head">
                        <span class="tone-step">1</span>
                        <h5 class="tone-q-title">Cuando te expones al sol sin protector, tu piel:</h5>
                    </div>

                    <label class="tone-option"><input type="radio" name="sol"><span>Se quema rápido y casi no se broncea</span></label>
                    <label class="tone-option"><input type="radio" name="sol"><span>Se broncea fácilmente sin quemarse</span></label>
                    <label class="tone-option"><input type="radio" name="sol"><span>Primero se quema y luego se broncea</span></label>
                </div>

                <div class="tone-q">
                    <div class="tone-q-head">
                        <span class="tone-step">2</span>
                        <h5 class="tone-q-title">¿Cómo describirías el fondo natural de tu piel?</h5>
                    </div>

                    <label class="tone-option"><input type="radio" name="fondo"><span>Rosado o rojizo</span></label>
                    <label class="tone-option"><input type="radio" name="fondo"><span>Amarillo, dorado o durazno</span></label>
                    <label class="tone-option"><input type="radio" name="fondo"><span>No logro identificarlo claramente</span></label>
                </div>

                <div class="tone-q">
                    <div class="tone-q-head">
                        <span class="tone-step">3</span>
                        <h5 class="tone-q-title">¿Qué tipo de joyería hace que tu piel se vea más luminosa?</h5>
                    </div>

                    <label class="tone-option"><input type="radio" name="joyeria"><span>Plata, acero o tonos fríos</span></label>
                    <label class="tone-option"><input type="radio" name="joyeria"><span>Oro, bronce o tonos cálidos</span></label>
                    <label class="tone-option"><input type="radio" name="joyeria"><span>Ambas me quedan bien</span></label>
                </div>

                <div class="tone-q">
                    <div class="tone-q-head">
                        <span class="tone-step">4</span>
                        <h5 class="tone-q-title">Cuando usas bases muy rosadas o muy amarillas:</h5>
                    </div>

                    <label class="tone-option"><input type="radio" name="base"><span>Las rosadas me favorecen más</span></label>
                    <label class="tone-option"><input type="radio" name="base"><span>Las amarillas me quedan mejor</span></label>
                    <label class="tone-option"><input type="radio" name="base"><span>Ninguna, ambas se ven raras</span></label>
                </div>

                <div class="tone-q">
                    <div class="tone-q-head">
                        <span class="tone-step">5</span>
                        <h5 class="tone-q-title">¿Cómo se ve tu piel al lado de una hoja blanca?</h5>
                    </div>

                    <label class="tone-option"><input type="radio" name="comparacion"><span>Más rosada o fría</span></label>
                    <label class="tone-option"><input type="radio" name="comparacion"><span>Más amarilla o dorada</span></label>
                    <label class="tone-option"><input type="radio" name="comparacion"><span>Muy similar, no destaca ningún tono</span></label>
                </div>

                <div class="tone-actions">
                    <a href="@Url.Action("Resultado","AsistenteTono")" class="btn tone-btn">Ver mi resultado ✨</a>
                    <a href="@Url.Action("Index","AsistenteTono")" class="btn tone-btn tone-btn-soft">Cancelar</a>
                </div>

            </div>
        </div>

    </div>
</section>
