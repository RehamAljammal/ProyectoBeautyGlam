@{
        ViewBag.Title = "Asistente de Tono";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space tone-page">
    <div class="container tone-container">

        <div class="tone-card">
            <div class="tone-card-head text-center">
                <span class="tone-badge">Asistente de maquillaje 💖</span>
                <h2 class="tone-card-title">Asistente de Tono</h2>
                <p class="tone-card-desc">
                    Descubre productos ideales según tu tono y subtono de piel.
                </p>
            </div>

            <div class="tone-card-body text-center">
                <a href="@Url.Action("Cuestionario","AsistenteTono")"
                   class="btn tone-btn">
                    Comenzar cuestionario ✨
                </a>
            </div>
        </div>

    </div>
</section>
