@{
    ViewBag.Title = "Resultado del Asistente de Tono";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space tone-page">
    <div class="container tone-container">

        <div class="tone-header">
            <h2 class="tone-title">Tu Resultado</h2>
            <p class="tone-subtitle">Según tus respuestas, este es tu perfil de tono ✨</p>
        </div>

        <div class="tone-card">
            <div class="tone-card-head">
                <span class="tone-badge">Resultado</span>
                <h3 class="tone-card-title">Tono medio · Subtono neutro</h3>
                <p class="tone-card-desc">Colores que te favorecen y se ven súper naturales en tu piel.</p>
            </div>

            <div class="tone-result">
                <div class="tone-chip-grid">
                    <div class="tone-chip"><strong>Tono</strong><span>Medio</span></div>
                    <div class="tone-chip"><strong>Subtono</strong><span>Neutro</span></div>
                    <div class="tone-chip tone-chip-wide"><strong>Colores ideales</strong><span>Beige, durazno, rosado suave</span></div>
                    <div class="tone-chip tone-chip-wide"><strong>Base recomendada</strong><span>Beige Neutral</span></div>
                </div>

                <div class="tone-actions">
                    <a href="@Url.Action("Index","Catalogo")" class="btn tone-btn">Ver productos recomendados ✨</a>
                    <a href="@Url.Action("Cuestionario","AsistenteTono")" class="btn tone-btn tone-btn-soft">Repetir cuestionario</a>
                    <a href="@Url.Action("Index","Perfil")" class="btn tone-btn tone-btn-soft">Guardar en mi perfil</a>
                </div>
            </div>
        </div>

    </div>
</section>
