@{
        ViewBag.Title = "Iniciar Sesión";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content auth-page">

    <!-- Encabezado -->
    <section class="page-header-area pt-10 pb-9 auth-header" data-bg-color="#DFE4FF">
        <div class="container text-center">
            <h2 class="page-header-title auth-title">Iniciar Sesión</h2>
            <p class="auth-subtitle mb-0">Accede a tu cuenta para continuar</p>
        </div>
    </section>

    <!-- Formulario -->
    <section class="section-space">
        <div class="container">

            <div class="auth-card mx-auto">
                <div class="auth-card-head">
                    <span class="auth-badge">Bienvenido/a</span>
                    <h3 class="auth-card-title mb-1">Ingresa tus datos</h3>
                    <p class="auth-card-desc mb-0">Asegúrate de usar el correo con el que te registraste.</p>
                </div>

                <form class="auth-form">

                    <div class="mb-3">
                        <label class="form-label auth-label">Correo electrónico</label>
                        <input type="email" class="form-control auth-input" placeholder="example@gmail.com" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label auth-label">Contraseña</label>
                        <input type="password" class="form-control auth-input" placeholder="Ingrese su contraseña" />
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <a href="/Account/Recuperar" class="auth-link">¿Olvidaste tu contraseña?</a>
                    </div>

                    <!-- Solo visual: type="button" para evitar submit -->
                    <button type="button" class="btn auth-btn w-100 py-2 mb-3">Ingresar</button>

                    <div class="text-center auth-footer">
                        <span class="auth-muted">¿No tienes cuenta?</span>
                        <a href="/Account/Register" class="auth-link fw-bold ms-1">Registrarse</a>
                    </div>

                </form>
            </div>

        </div>
    </section>

</main>
