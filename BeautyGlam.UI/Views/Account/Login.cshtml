
@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">

    <!-- Encabezado -->
    <section class="page-header-area pt-10 pb-9" data-bg-color="#DFE4FF">
        <div class="container text-center">
            <h2 class="page-header-title">Iniciar Sesión</h2>
        </div>
    </section>

    <!-- Formulario -->
    <section class="section-space">
        <div class="container">

            <div class="shadow-sm border bg-white p-4 rounded-3 mx-auto" style="max-width: 500px;">

                <form>

                    <div class="mb-3">
                        <label class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" placeholder="example@gmail.com" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input type="password" class="form-control" placeholder="Ingrese su contraseña" />
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <a href="/Account/Recuperar" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                    </div>

                    <button class="btn btn-dark w-100 py-2 mb-3">Ingresar</button>

                    <div class="text-center">
                        <span>¿No tienes cuenta?</span>
                        <a href="/Account/Register" class="text-dark fw-bold ms-1">Registrarse</a>
                    </div>

                </form>

            </div>

        </div>
    </section>

</main>
