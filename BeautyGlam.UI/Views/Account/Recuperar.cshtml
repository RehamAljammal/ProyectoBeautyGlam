@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">

    <section class="page-header-area pt-10 pb-9" data-bg-color="#DFE4FF">
        <div class="container text-center">
            <h2 class="page-header-title">Recuperar Contraseña</h2>
        </div>
    </section>

    <section class="section-space">
        <div class="container">

            <div class="shadow-sm border bg-white p-4 rounded-3 mx-auto" style="max-width: 500px;">

                <form>

                    <div class="mb-3">
                        <label class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" placeholder="example@gmail.com" />
                    </div>

                    <button class="btn btn-dark w-100 py-2 mb-3">Enviar Enlace de Recuperación</button>

                    <div class="text-center">
                        <a href="/Account/Login" class="text-dark fw-bold">Volver al Inicio de Sesión</a>
                    </div>

                </form>

            </div>

        </div>
    </section>

</main>