@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content auth-page">

    <section class="page-header-area pt-10 pb-9 auth-header" data-bg-color="#DFE4FF">
        <div class="container text-center">
            <h2 class="page-header-title auth-title">Recuperar Contraseña</h2>
            <p class="auth-subtitle mb-0">Te enviaremos un enlace para restablecer tu contraseña</p>
        </div>
    </section>

    <section class="section-space">
        <div class="container">

            <div class="auth-card mx-auto">

                <div class="auth-card-head">
                    <span class="auth-badge">Recuperación</span>
                    <h3 class="auth-card-title mb-1">¿Olvidaste tu contraseña?</h3>
                    <p class="auth-card-desc mb-0">Ingresá el correo con el que te registraste.</p>
                </div>

                <form class="auth-form">

                    <div class="mb-3">
                        <label class="form-label auth-label">Correo electrónico</label>
                        <input type="email" class="form-control auth-input" placeholder="example@gmail.com" />
                    </div>

                    <!-- Solo visual: type="button" para evitar submit -->
                    <button type="button" class="btn auth-btn w-100 py-2 mb-3">
                        Enviar enlace de recuperación
                    </button>

                    <div class="text-center auth-footer">
                        <a href="/Account/Login" class="auth-link fw-bold">Volver al inicio de sesión</a>
                    </div>

                </form>

            </div>

        </div>
    </section>

</main>
