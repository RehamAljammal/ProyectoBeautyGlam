@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content auth-page">

    <!-- Encabezado -->
    <section class="page-header-area pt-10 pb-9 auth-header" data-bg-color="#FFF3DA">
        <div class="container text-center">
            <h2 class="page-header-title auth-title">Crear una Cuenta</h2>
            <p class="auth-subtitle mb-0">Regístrate para empezar tu experiencia</p>
        </div>
    </section>

    <!-- Formulario -->
    <section class="section-space">
        <div class="container">

            <div class="auth-card mx-auto">

                <!-- Header del card -->
                <div class="auth-card-head">
                    <span class="auth-badge">Registro</span>
                    <h3 class="auth-card-title mb-1">Crea tu cuenta</h3>
                    <p class="auth-card-desc mb-0">
                        Completa los datos para crear tu perfil.
                    </p>
                </div>

                <!-- Form -->
                <form class="auth-form">

                    <div class="mb-3">
                        <label class="form-label auth-label">Nombre completo</label>
                        <input type="text"
                               class="form-control auth-input"
                               placeholder="Ejemplo: Ana López" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label auth-label">Correo electrónico</label>
                        <input type="email"
                               class="form-control auth-input"
                               placeholder="example@gmail.com" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label auth-label">Contraseña</label>
                        <input type="password"
                               class="form-control auth-input"
                               placeholder="Crea una contraseña fuerte" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label auth-label">Confirmar contraseña</label>
                        <input type="password"
                               class="form-control auth-input"
                               placeholder="Repita la contraseña" />
                    </div>

                    <!-- Solo visual -->
                    <button type="button"
                            class="btn auth-btn w-100 py-2 mb-3">
                        Registrarse
                    </button>

                    <div class="text-center auth-footer">
                        <span class="auth-muted">¿Ya tienes cuenta?</span>
                        <a href="/Account/Login"
                           class="auth-link fw-bold ms-1">
                            Iniciar sesión
                        </a>
                    </div>

                </form>

            </div>

        </div>
    </section>

</main>
