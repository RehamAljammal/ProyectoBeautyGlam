@model BeautyGlam.Abstracciones.ModelosParaUI.ProveedoresDto

@{
    ViewBag.Title = "Editar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space sup-page">
    <div class="container sup-container">

        <div class="sup-header">
            <h2 class="sup-title">Editar Proveedor</h2>
            <p class="sup-subtitle">Actualiza datos sin perder el estilo 💖</p>
        </div>

        <div class="sup-card" style="max-width: 820px; margin: 0 auto;">
            <div class="sup-card-head">
                <span class="sup-badge">Edición</span>
                <a href="@Url.Action("ListaDeProveedores","Proveedores")" class="sup-btn sup-btn-soft">
                    Volver
                </a>
            </div>

            @using (Html.BeginForm("EditarProveedor", "Proveedores", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(m => m.id)

                <div class="sup-form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                    <div class="row g-3">

                        <!-- Nombre -->
                        <div class="col-md-7">
                            @Html.LabelFor(m => m.nombre, new { @class = "form-label sup-label" })
                            @Html.TextBoxFor(m => m.nombre, new
                            {
                                @class = "form-control sup-input",
                                placeholder = "Nombre del proveedor"
                            })
                            @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })
                        </div>

                        <!-- Teléfono -->
                        <div class="col-md-5">
                            @Html.LabelFor(m => m.telefono, new { @class = "form-label sup-label" })
                            @Html.TextBoxFor(m => m.telefono, new
                            {
                                @class = "form-control sup-input",
                                placeholder = "8888-8888"
                            })
                            @Html.ValidationMessageFor(m => m.telefono, "", new { @class = "text-danger" })
                        </div>

                        <!-- Cédula -->
                        <div class="col-md-7">
                            @Html.LabelFor(m => m.cedula, new { @class = "form-label sup-label" })
                            @Html.TextBoxFor(m => m.cedula, new
                            {
                                @class = "form-control sup-input",
                                placeholder = "Cédula jurídica o física"
                            })
                            @Html.ValidationMessageFor(m => m.cedula, "", new { @class = "text-danger" })
                        </div>

                        <!-- Correo -->
                        <div class="col-md-5">
                            @Html.LabelFor(m => m.correo, new { @class = "form-label sup-label" })
                            @Html.TextBoxFor(m => m.correo, new
                            {
                                @class = "form-control sup-input",
                                type = "email",
                                placeholder = "correo@proveedor.com"
                            })
                            @Html.ValidationMessageFor(m => m.correo, "", new { @class = "text-danger" })
                        </div>

                        <!-- Estado -->
                        <div class="col-md-5">
                            @Html.LabelFor(m => m.estado, new { @class = "form-label sup-label" })
                            @Html.DropDownListFor(
                                m => m.estado,
                                new SelectList(
                                    new[]
                                    {
                                        new { Value = true, Text = "Activo" },
                                        new { Value = false, Text = "Inactivo" }
                                    },
                                    "Value",
                                    "Text",
                                    Model.estado
                                ),
                                new { @class = "form-control sup-select" }
                            )
                            @Html.ValidationMessageFor(m => m.estado, "", new { @class = "text-danger" })
                        </div>

                        <!-- Dirección -->
                        <div class="col-12">
                            @Html.LabelFor(m => m.direccion, new { @class = "form-label sup-label" })
                            @Html.TextAreaFor(m => m.direccion, new
                            {
                                @class = "form-control sup-textarea",
                                rows = 3,
                                placeholder = "Dirección completa"
                            })
                            @Html.ValidationMessageFor(m => m.direccion, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <!-- Botones -->
                    <div class="d-flex justify-content-end gap-2 mt-4">

                        <button type="submit" class="sup-btn">
                            Guardar cambios ✨
                        </button>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
