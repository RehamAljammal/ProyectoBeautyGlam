@{
    ViewBag.Title = "Editar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space sup-page">
    <div class="container sup-container">

        <div class="sup-header">
            <h2 class="sup-title">Editar Proveedor</h2>
            <p class="sup-subtitle">Actualiza datos sin perder el estilo 💖</p>
        </div>

        <div class="sup-card" style="max-width: 820px; margin: 0 auto;">
            <div class="sup-card-head">
                <span class="sup-badge">Edición</span>
                <a href="@Url.Action("Index","Proveedores")" class="sup-btn sup-btn-soft">Volver</a>
            </div>

            <form class="sup-form">
                <div class="row g-3">
                    <div class="col-md-7">
                        <label class="form-label sup-label">Nombre</label>
                        <input type="text" class="form-control sup-input" value="Distribuidora Glam SRL" />
                    </div>

                    <div class="col-md-5">
                        <label class="form-label sup-label">Teléfono</label>
                        <input type="text" class="form-control sup-input" value="8888-8888" />
                    </div>

                    <div class="col-md-7">
                        <label class="form-label sup-label">Correo</label>
                        <input type="email" class="form-control sup-input" value="glam@correo.com" />
                    </div>

                    <div class="col-md-5">
                        <label class="form-label sup-label">Estado</label>
                        <select class="form-control sup-select">
                            <option selected>Activo</option>
                            <option>Inactivo</option>
                        </select>
                    </div>

                    <div class="col-12">
                        <label class="form-label sup-label">Dirección</label>
                        <textarea class="form-control sup-textarea" rows="3">San José</textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="@Url.Action("Index","Proveedores")" class="sup-btn sup-btn-soft">Cancelar</a>
                    <button type="button" class="sup-btn">Guardar cambios ✨</button>
                </div>
            </form>
        </div>

    </div>
</section>
