@{
    ViewBag.Title = "Detalles del Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space sup-page">
    <div class="container sup-container">

        <div class="sup-header">
            <h2 class="sup-title">Detalles del Proveedor</h2>
            <p class="sup-subtitle">Información completa del contacto ✨</p>
        </div>

        <div class="sup-card" style="max-width: 820px; margin: 0 auto;">
            <div class="sup-card-head">
                <span class="sup-badge">Detalle</span>
                <a href="@Url.Action("Index","Proveedores")" class="sup-btn sup-btn-soft">Volver</a>
            </div>

            <div class="sup-form">
                <h4 style="color:#5c3b6f; font-weight:900;" class="mb-3">Distribuidora Glam SRL</h4>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-3 rounded-4" style="border:1px solid #f3eaf5; background:#fff;">
                            <div class="small" style="color:#8b7a97; font-weight:800;">Teléfono</div>
                            <div style="color:#6b4c7a; font-weight:800;">8888-8888</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 rounded-4" style="border:1px solid #f3eaf5; background:#fff;">
                            <div class="small" style="color:#8b7a97; font-weight:800;">Email</div>
                            <div style="color:#6b4c7a; font-weight:800;">glam@correo.com</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="p-3 rounded-4" style="border:1px solid #f3eaf5; background:#fff;">
                            <div class="small" style="color:#8b7a97; font-weight:800;">Dirección</div>
                            <div style="color:#6b4c7a; font-weight:800;">San José, Costa Rica</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="p-3 rounded-4 d-flex align-items-center justify-content-between"
                             style="border:1px solid #f3eaf5; background:linear-gradient(135deg,#fff0f6,#f1f0ff,#f0fff8);">
                            <div style="color:#6b4c7a; font-weight:900;">Estado</div>
                            <span class="sup-chip sup-chip-ok">Activo</span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="@Url.Action("Index","Proveedores")" class="sup-btn sup-btn-soft">Volver</a>
                    <a href="@Url.Action("Editar","Proveedores")" class="sup-btn sup-btn-outline">Editar ✏️</a>
                </div>
            </div>
        </div>

    </div>
</section>
