                                    <a href="@Url.Action("Desactivar","Proveedores", new { id = 2 })" class="sup-btn sup-btn-danger sup-btn-sm">Desactivar 🗑️</a>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td><strong style="color:#5c3b6f;">Beauty Imports</strong></td>
