                                    <a href="@Url.Action("Editar","Proveedores", new { id = 3 })" class="sup-btn sup-btn-outline sup-btn-sm">Editar ✏️</a>
                                    <a href="@Url.Action("Activar","Proveedores", new { id = 3 })" class="sup-btn sup-btn-sm">Activar ✨</a>
                                </div>
