@model BeautyGlam.Abstracciones.ModelosParaUI.ProductosDTO

@{
    ViewBag.Title = "DetallesDelProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space prod-page">
    <div class="container prod-container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-9">

                <div class="prod-card">
                    <div class="prod-card-head">
                        <div><span class="prod-badge">Detalle</span></div>
                        <a href="@Url.Action("ListaDeProductos","Productos")" class="prod-btn prod-btn-soft">Volver</a>
                    </div>

                    <div class="p-4">
                        <h2 style="color:#5c3b6f; font-weight:900;">@Model.nombre</h2>

                        <div class="mt-2 mb-3">
                            @if (Model.estado)
                            {<span class="prod-chip prod-chip-ok">Activo</span> }
                            else
                            { <span class="prod-chip prod-chip-off">Inactivo</span>}
                        </div>

                        <p style="color:#6b4c7a; font-weight:650;">@Model.descripcion</p>

                        <hr />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <p><strong>Precio:</strong> @Model.precio</p>
                                <p><strong>Categoría:</strong> @Model.nombreCategoria</p>
                                <p><strong>Marca:</strong> @Model.nombreMarca</p>
                                <p><strong>Proveedor:</strong> @Model.nombreProveedor</p>
                            </div>
                        </div>

                        <div class="d-flex gap-2 flex-wrap mt-4">
                            <a href="@Url.Action("EditarProducto","Productos", new { id = Model.id })"
                               class="prod-btn prod-btn-outline">Editar ✏️</a>

                            <a href="@Url.Action("EliminarProducto","Productos", new { id = Model.id })"
                               class="prod-btn prod-btn-danger">Eliminar 🗑️</a>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>
