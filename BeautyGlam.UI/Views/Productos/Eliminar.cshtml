@{
    ViewBag.Title = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space">
    <div class="container">

        <div class="card p-5 shadow-sm" style="max-width:600px;margin:0 auto;">

            <h2 class="text-center text-danger mb-4">Eliminar producto</h2>

            <p class="text-center mb-4">
                ¿Estás segura de que deseas eliminar este producto?
                <br />
                <strong>Esta acción no se puede deshacer.</strong>
            </p>

            <div class="text-center mb-4">
                <img src="https://i5.walmartimages.com/seo/Rare-Beauty-By-Selena-Gomez-Liquid-Touch-Weightless-Foundation-0-94oz-170-W-New_7ea70278-ee27-46d2-afb2-3269fa349fd0.56e2e46e3563a42e835192b0f18fda1d.jpeg"
                     class="rounded mb-3"
                     style="width:120px;height:120px;object-fit:cover;">
                <h4>Base Líquida Rare Beauty</h4>
                <p class="text-muted">Categoría: Maquillaje</p>
                <p class="text-muted">$29.99</p>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <a href="@Url.Action("Index","Productos")" class="btn btn-danger px-4">Sí, eliminar</a>
                <a href="@Url.Action("Index","Productos")" class="btn btn-secondary px-4">Cancelar</a>
            </div>

        </div>

    </div>
</section>