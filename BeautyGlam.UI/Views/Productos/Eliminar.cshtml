@{
    ViewBag.Title = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space prod-page">
    <div class="container prod-container">

        <div class="row justify-content-center">
            <div class="col-12 col-lg-7">

                <div class="prod-card">
                    <div class="prod-card-head">
                        <div><span class="prod-badge">Confirmación</span></div>
                    </div>

                    <div class="p-4 text-center">
                        <h2 style="color:#7a1f2d; font-weight:900;" class="mb-3">¿Eliminar producto?</h2>
                        <p class="mb-4" style="color:#6b4c7a; font-weight:650;">
                            ¿Estás segura de que deseas eliminar este producto?
                            <br />
                            <strong>Esta acción no se puede deshacer.</strong>
                        </p>

                        <div class="mb-4">
                            <img src="https://i5.walmartimages.com/seo/Rare-Beauty-By-Selena-Gomez-Liquid-Touch-Weightless-Foundation-0-94oz-170-W-New_7ea70278-ee27-46d2-afb2-3269fa349fd0.56e2e46e3563a42e835192b0f18fda1d.jpeg"
                                 class="rounded-4 mb-3"
                                 style="width:130px;height:130px;object-fit:cover;border:1px solid #f2e6f3;" />
                            <h4 style="color:#5c3b6f; font-weight:900;" class="mb-1">Base Líquida Rare Beauty</h4>
                            <p class="text-muted mb-0">Categoría: Maquillaje · $29.99</p>
                        </div>

                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                            <a href="@Url.Action("Index","Productos")" class="prod-btn prod-btn-danger">Sí, eliminar 🗑️</a>
                            <a href="@Url.Action("Index","Productos")" class="prod-btn prod-btn-soft">Cancelar</a>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</section>
