@{
    ViewBag.Title = "Detalle del Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space prod-page">
    <div class="container prod-container">

        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">

                <div class="prod-card">
                    <div class="prod-card-head">
                        <div><span class="prod-badge">Detalle</span></div>
                        <a href="@Url.Action("Index","Productos")" class="prod-btn prod-btn-soft">Volver</a>
                    </div>

                    <div class="p-4">
                        <div class="row align-items-center g-4">

                            <div class="col-md-5 text-center">
                                <img src="https://i5.walmartimages.com/seo/Rare-Beauty-By-Selena-Gomez-Liquid-Touch-Weightless-Foundation-0-94oz-170-W-New_7ea70278-ee27-46d2-afb2-3269fa349fd0.56e2e46e3563a42e835192b0f18fda1d.jpeg"
                                     class="img-fluid rounded-4"
                                     style="max-height:420px; width:100%; object-fit:cover; border:1px solid #f2e6f3;" />
                            </div>

                            <div class="col-md-7">
                                <h2 style="color:#5c3b6f; font-weight:900;">Base Líquida Rare Beauty</h2>
                                <p class="text-muted mb-2">Categoría: <strong style="color:#6b4c7a;">Maquillaje</strong></p>

                                <div class="mb-3">
                                    <span class="prod-chip prod-chip-ok">Activo</span>
                                </div>

                                <h4 class="mb-3" style="color:#4b2b4b; font-weight:900;">$29.99</h4>

                                <p style="color:#6b4c7a; font-weight:650;">
                                    Base líquida de cobertura media, acabado natural y sensación ligera en la piel.
                                    Ideal para un look fresco y luminoso durante todo el día.
                                </p>

                                <div class="d-flex gap-2 flex-wrap mt-4">
                                    <a href="@Url.Action("Index","Wishlist")" class="prod-btn prod-btn-outline">Agregar a wishlist 💖</a>
                                    <a href="@Url.Action("Editar","Productos", new { id = 1 })" class="prod-btn prod-btn-soft">Editar ✏️</a>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</section>
