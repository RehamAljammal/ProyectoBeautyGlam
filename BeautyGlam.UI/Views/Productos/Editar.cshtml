@{
    ViewBag.Title = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space prod-page">
    <div class="container prod-container">

        <div class="prod-header">
            <h2 class="prod-title">Editar producto</h2>
            <p class="prod-subtitle">Actualiza info, precio o estado sin perder el estilo 💅</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">

                <div class="prod-card">
                    <div class="prod-card-head">
                        <div><span class="prod-badge">Edición</span></div>
                    </div>

                    <div class="p-4">
                        <form>

                            <div class="mb-3">
                                <label class="prod-label">Nombre del producto</label>
                                <input type="text" class="form-control prod-input" value="Base Líquida Rare Beauty" />
                            </div>

                            <div class="mb-3">
                                <label class="prod-label"></label>
                                <select class="form-select prod-input">
                                    <option selected>Maquillaje</option>
                                    <option>Skincare</option>
                                    <option>Joyas</option>
                                    <option>Bolsos</option>
                                    <option>Accesorios</option>
                                </select>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="prod-label">Precio</label>
                                    <input type="number" class="form-control prod-input" value="29.99" />
                                </div>
                                <div class="col-md-6">
                                    <label class="prod-label"></label>
                                    <select class="form-select prod-input">
                                        <option selected>Activo</option>
                                        <option>Inactivo</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label class="prod-label">Descripción</label>
                                <textarea class="form-control prod-input" rows="3">Base ligera, de cobertura media y acabado natural.</textarea>
                            </div>

                            <div class="mt-3">
                                <label class="prod-label">Imagen (URL)</label>
                                <input type="text" class="form-control prod-input" value="https://via.placeholder.com/400" />
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4 flex-wrap">
                                <a href="@Url.Action("Index","Productos")" class="prod-btn prod-btn-soft">Cancelar</a>
                                <button type="button" class="prod-btn">Guardar cambios 💾</button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>
