@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space prod-page">
    <div class="container prod-container">

        <div class="prod-header">
            <h2 class="prod-title">Gestión de Productos</h2>
            <p class="prod-subtitle">Administra catálogo, estado y detalles 💖</p>
        </div>

        <div class="prod-card mb-4">
            <div class="prod-card-head">
                <div>
                    <span class="prod-badge">Filtros</span>
                </div>
                <a href="@Url.Action("Crear","Productos")" class="prod-btn">
                    + Agregar Producto
                </a>
            </div>

            <div class="prod-filters">
                <div class="prod-filters-title">Busca más rápido ✨</div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="prod-label">Buscar por nombre</label>
                        <input type="text" class="form-control prod-input" placeholder="Ej: Rare Beauty" />
                    </div>

                    <div class="col-md-4">
                        <label class="prod-label"></label>
                        <select class="form-select prod-input">
                            <option selected>Categoría</option>
                            <option>Maquillaje</option>
                            <option>Skincare</option>
                            <option>Joyas</option>
                            <option>Bolsos</option>
                            <option>Accesorios</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="prod-label"></label>
                        <select class="form-select prod-input">
                            <option selected>Estado</option>
                            <option>Activo</option>
                            <option>Inactivo</option>
                        </select>
                    </div>

                    <div class="col-12 d-flex justify-content-end">
                        <button class="prod-btn" type="button">Aplicar filtros ✨</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="prod-card">
            <div class="prod-card-head">
                <div>
                    <span class="prod-badge">Listado</span>
                </div>
            </div>

            <div class="prod-table-wrap table-responsive">
                <table class="table table-striped align-middle prod-table">
                    <thead>
                        <tr>
                            <th style="width: 110px;">Imagen</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th>Precio</th>
                            <th>Estado</th>
                            <th class="text-end" style="width: 340px;">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>
                                <img class="prod-thumb"
                                     src="https://i5.walmartimages.com/seo/Rare-Beauty-By-Selena-Gomez-Liquid-Touch-Weightless-Foundation-0-94oz-170-W-New_7ea70278-ee27-46d2-afb2-3269fa349fd0.56e2e46e3563a42e835192b0f18fda1d.jpeg" />
                            </td>
                            <td><strong style="color:#5c3b6f;">Base Líquida Rare Beauty</strong></td>
                            <td>Maquillaje</td>
                            <td>$29.99</td>
                            <td><span class="prod-chip prod-chip-ok">Activo</span></td>
                            <td class="text-end">
                                <div class="prod-actions">
                                    <a href="@Url.Action("Detalle","Productos", new { id = 1 })" class="prod-btn prod-btn-soft prod-btn-sm">Ver 👀</a>
                                    <a href="@Url.Action("Editar","Productos", new { id = 1 })" class="prod-btn prod-btn-outline prod-btn-sm">Editar ✏️</a>
                                    <a href="@Url.Action("Eliminar","Productos", new { id = 1 })" class="prod-btn prod-btn-danger prod-btn-sm">Eliminar 🗑️</a>
                                    <a href="@Url.Action("Index","Wishlist")" class="prod-btn prod-btn-soft prod-btn-sm">Wishlist 💖</a>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <img class="prod-thumb"
                                     src="https://images-na.ssl-images-amazon.com/images/I/613CFOwbuGL._AC_UL600_SR600,600_.jpg" />
                            </td>
                            <td><strong style="color:#5c3b6f;">Serum Niacinamide The Ordinary</strong></td>
                            <td>Skincare</td>
                            <td>$14.50</td>
                            <td><span class="prod-chip prod-chip-ok">Activo</span></td>
                            <td class="text-end">
                                <div class="prod-actions">
                                    <a href="@Url.Action("Detalle","Productos", new { id = 2 })" class="prod-btn prod-btn-soft prod-btn-sm">Ver 👀</a>
                                    <a href="@Url.Action("Editar","Productos", new { id = 2 })" class="prod-btn prod-btn-outline prod-btn-sm">Editar ✏️</a>
                                    <a href="@Url.Action("Eliminar","Productos", new { id = 2 })" class="prod-btn prod-btn-danger prod-btn-sm">Eliminar 🗑️</a>
                                    <a href="@Url.Action("Index","Wishlist")" class="prod-btn prod-btn-soft prod-btn-sm">Wishlist 💖</a>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <img class="prod-thumb"
                                     src="https://www.charleskeith.eu/dw/image/v2/BMCD_PRD/on/demandware.static/-/Sites-ck-products/default/dwdb1d0148/images/hi-res/2024-L3-CK2-20151402-01-5.jpg?sw=504&sh=672" />
                            </td>
                            <td><strong style="color:#5c3b6f;">Bolso negro minimalista</strong></td>
                            <td>Bolsos</td>
                            <td>$39.90</td>
                            <td><span class="prod-chip prod-chip-off">Inactivo</span></td>
                            <td class="text-end">
                                <div class="prod-actions">
                                    <a href="@Url.Action("Detalle","Productos", new { id = 3 })" class="prod-btn prod-btn-soft prod-btn-sm">Ver 👀</a>
                                    <a href="@Url.Action("Editar","Productos", new { id = 3 })" class="prod-btn prod-btn-outline prod-btn-sm">Editar ✏️</a>
                                    <a href="@Url.Action("Eliminar","Productos", new { id = 3 })" class="prod-btn prod-btn-danger prod-btn-sm">Eliminar 🗑️</a>
                                    <a href="@Url.Action("Index","Wishlist")" class="prod-btn prod-btn-soft prod-btn-sm">Wishlist 💖</a>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </div>

    </div>
</section>
