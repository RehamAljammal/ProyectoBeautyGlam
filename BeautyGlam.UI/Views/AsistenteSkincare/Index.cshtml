    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space sk-page">
    <div class="container sk-container">

        <div class="sk-hero">

            <span class="sk-badge">Asistente inteligente ✨</span>

            <h2 class="sk-hero-title">
                Asistente de Skincare
            </h2>

            <p class="sk-hero-text">
                Descubre la rutina ideal para tu piel según tu tipo,
                necesidades y objetivos. Nuestro asistente te guía paso a paso
