<section class="section-space sk-page">
    <div class="container sk-container">

        <!-- Header -->
        <div class="sk-header text-center">
            <h3 class="sk-title">Cuéntanos sobre tu piel</h3>
            <p class="sk-subtitle">
                Responde unas preguntas rápidas para crear tu rutina ideal ✨
            </p>
        </div>

        <!-- Card 1 -->
        <div class="sk-card">
            <div class="sk-card-head">
                <span class="sk-step">1</span>
                <h6 class="sk-question">¿Cómo describirías tu tipo de piel?</h6>
            </div>

            <div class="sk-field">
                <select class="form-select sk-select">
                    <option selected disabled>Selecciona una opción</option>
                    <option>Grasa</option>
                    <option>Seca</option>
                    <option>Mixta</option>
                    <option>Sensible</option>
                </select>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="sk-card">
            <div class="sk-card-head">
                <span class="sk-step">2</span>
                <h6 class="sk-question">¿Qué es lo que más te preocupa?</h6>
            </div>

            <div class="sk-check-group">
                <label class="sk-check">
                    <input type="checkbox">
                    <span>Acné</span>
                </label>
                <label class="sk-check">
                    <input type="checkbox">
                    <span>Manchas</span>
                </label>
                <label class="sk-check">
                    <input type="checkbox">
                    <span>Arrugas</span>
                </label>
                <label class="sk-check">
                    <input type="checkbox">
                    <span>Resequedad</span>
                </label>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="sk-card">
            <div class="sk-card-head">
                <span class="sk-step">3</span>
                <h6 class="sk-question">¿Cada cuánto realizas tu rutina?</h6>
            </div>

            <div class="sk-field">
                <select class="form-select sk-select">
                    <option>Todos los días</option>
                    <option>Algunas veces a la semana</option>
                    <option>Muy rara vez</option>
                </select>
            </div>
        </div><!-- Card 4 -->
        <div class="sk-card">
            <div class="sk-card-head">
                <span class="sk-step">4</span>
                <h6 class="sk-question">¿Tu piel suele reaccionar con facilidad?</h6>
            </div>

            <div class="sk-field">
                <select class="form-select sk-select">
                    <option selected disabled>Selecciona una opción</option>
                    <option>Sí, es muy sensible</option>
                    <option>Algunas veces</option>
                    <option>No, casi nunca</option>
                </select>
            </div>
        </div>

        <!-- Card 5 -->
        <div class="sk-card">
            <div class="sk-card-head">
                <span class="sk-step">5</span>
                <h6 class="sk-question">¿Cuál es tu objetivo principal?</h6>
            </div>

            <div class="sk-check-group">
                <label class="sk-check">
                    <input type="checkbox">
                    <span>Controlar brillo y grasa</span>
                </label>
                <label class="sk-check">
                    <input type="checkbox">
                    <span>Hidratar y nutrir</span>
                </label>
                <label class="sk-check">
                    <input type="checkbox">
                    <span>Reducir imperfecciones</span>
                </label>
                <label class="sk-check">
                    <input type="checkbox">
                    <span>Prevenir envejecimiento</span>
                </label>
            </div>
        </div>


        <!-- Acción -->
        <div class="sk-action">
            <a href="@Url.Action("Rutina","AsistenteSkincare")"
               class="btn sk-btn">
                Ver mi rutina ✨
            </a>
        </div>

    </div>
</section>
