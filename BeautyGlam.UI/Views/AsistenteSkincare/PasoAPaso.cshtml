@{
    ViewBag.Title = "Rutina Paso a Paso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space sk-page">
    <div class="container sk-container">

        <div class="sk-header text-center">
            <h3 class="sk-title">Cómo aplicar tu rutina</h3>
            <p class="sk-subtitle">Sigue estos pasos en orden para mejores resultados ✨</p>
        </div>

        <div class="sk-card sk-steps">

            <div class="sk-step-item">
                <div class="sk-step-num">1</div>
                <div class="sk-step-body">
                    <h6 class="sk-step-title">Limpieza</h6>
                    <p class="sk-step-text">Limpia tu rostro mañana y noche con un limpiador suave.</p>
                </div>
            </div>

            <div class="sk-step-item">
                <div class="sk-step-num">2</div>
                <div class="sk-step-body">
                    <h6 class="sk-step-title">Tónico</h6>
                    <p class="sk-step-text">Aplica el tónico con suaves toques (sin frotar).</p>
                </div>
            </div>

            <div class="sk-step-item">
                <div class="sk-step-num">3</div>
                <div class="sk-step-body">
                    <h6 class="sk-step-title">Sérum</h6>
                    <p class="sk-step-text">Usa el sérum según tu necesidad (manchas, acné, hidratación).</p>
                </div>
            </div>

            <div class="sk-step-item">
                <div class="sk-step-num">4</div>
                <div class="sk-step-body">
                    <h6 class="sk-step-title">Hidratante</h6>
                    <p class="sk-step-text">Hidrata bien tu piel para mantenerla equilibrada.</p>
                </div>
            </div>

            <div class="sk-step-item sk-step-last">
                <div class="sk-step-num">5</div>
                <div class="sk-step-body">
                    <h6 class="sk-step-title">Protector solar</h6>
                    <p class="sk-step-text">De día, finaliza con bloqueador solar (¡no lo saltes!).</p>
                </div>
            </div>

        </div>

        <div class="sk-action">
            <a href="@Url.Action("Repeticion","AsistenteSkincare")"
               class="btn sk-btn sk-btn-outline">
                Repetir diagnóstico ♡
            </a>
        </div>

    </div>
</section>
