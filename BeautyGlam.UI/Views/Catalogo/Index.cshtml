@{
        ViewBag.Title = "Catálogo de Productos";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space cat-page">
    <div class="container cat-container">

        <div class="cat-header">
            <h2 class="cat-title">Catálogo de Productos</h2>
            <p class="cat-subtitle">Explora maquillaje, skincare, accesorios y más 💖</p>
        </div>

        <div class="row g-4">

            <!-- PRODUCTO 1 -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="cat-card">
                    <div class="cat-img-wrap">
                        <img src="https://m.media-amazon.com/images/I/41v1RaUH57L._AC_UF1000,1000_QL80_.jpg" class="cat-img" alt="Base Líquida Rare Beauty" />
                        <div class="cat-price-badge">$29.99</div>
                    </div>

                    <div class="cat-body">
                        <h4 class="cat-name">Base Líquida Rare Beauty</h4>
                        <p class="cat-muted">Maquillaje · Acabado natural</p>

                        <div class="cat-actions">
                            <a href="@Url.Action("VistaProducto","Catalogo", new { id = 1 })" class="cat-btn">Ver producto ✨</a>
                            <a href="@Url.Action("Index","Wishlist")" class="cat-btn cat-btn-soft">Agregar a wishlist ♡</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PRODUCTO 2 -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="cat-card">
                    <div class="cat-img-wrap">
                        <img src="https://walmartcr.vtexassets.com/arquivos/ids/976465/98631_01.jpg?v=638900343014900000" class="cat-img" alt="Crema Hidratante Neutrogena" />
                        <div class="cat-price-badge">$39.99</div>
                    </div>

                    <div class="cat-body">
                        <h4 class="cat-name">Crema Hidratante Neutrogena</h4>
                        <p class="cat-muted">Skincare · Hidratación</p>

                        <div class="cat-actions">
                            <a href="@Url.Action("VistaProducto","Catalogo", new { id = 2 })" class="cat-btn">Ver producto ✨</a>
                            <a href="@Url.Action("Index","Wishlist")" class="cat-btn cat-btn-soft">Agregar a wishlist ♡</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PRODUCTO 3 -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="cat-card">
                    <div class="cat-img-wrap">
                        <img src="https://walmartcr.vtexassets.com/arquivos/ids/986159/79004_01.jpg?v=638919102136500000" class="cat-img" alt="Máscara de Pestañas Maybelline" />
                        <div class="cat-price-badge">$19.99</div>
                    </div>

                    <div class="cat-body">
                        <h4 class="cat-name">Máscara de Pestañas Maybelline</h4>
                        <p class="cat-muted">Maquillaje · Volumen</p>

                        <div class="cat-actions">
                            <a href="@Url.Action("VistaProducto","Catalogo", new { id = 3 })" class="cat-btn">Ver producto ✨</a>
                            <a href="@Url.Action("Index","Wishlist")" class="cat-btn cat-btn-soft">Agregar a wishlist ♡</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ⚠️ Repite el MISMO patrón para productos 4..20 -->
            <!-- Solo cambia: src, alt, nombre, mini-descripción, precio badge, id -->
        </div>

    </div>
</section>
