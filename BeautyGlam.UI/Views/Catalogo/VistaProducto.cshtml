@{
        ViewBag.Title = "Detalle del Producto";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space cat-page">
    <div class="container cat-container">

        <div class="prod-card">

            <div class="prod-head text-center">
                <span class="prod-badge">Detalle del producto</span>
                <h2 class="prod-title">Base Líquida Rare Beauty</h2>
                <p class="prod-meta">Categoría: Maquillaje</p>
            </div>

            <div class="prod-body">
                <div class="row g-4 align-items-start">

                    <!-- imagen -->
                    <div class="col-12 col-lg-6">
                        <img src="https://m.media-amazon.com/images/I/41v1RaUH57L._AC_UF1000,1000_QL80_.jpg"
                             class="prod-img"
                             alt="Base Líquida Rare Beauty" />
                    </div>

                    <!-- info -->
                    <div class="col-12 col-lg-6">
                        <div class="prod-price">$29.99</div>

                        <p class="prod-desc">
                            Base líquida de cobertura media y acabado natural.
                            Fórmula ligera creada para una piel radiante.
                        </p>

                        <div class="prod-chips">
                            <span class="prod-chip">Acabado natural</span>
                            <span class="prod-chip">Cobertura media</span>
                            <span class="prod-chip">Ligera</span>
                            <span class="prod-chip">Todo tipo de piel</span>
                        </div>

                        <h5 class="mt-3" style="font-weight:900;color:#5c3b6f;">Características</h5>
                        <ul class="prod-list mt-2">
                            <li>No comedogénica</li>
                            <li>Apto para todo tipo de piel</li>
                            <li>Larga duración</li>
                            <li>Acabado natural y luminoso</li>
                        </ul>

                        <div class="prod-actions">
                            <a href="@Url.Action("Index","Wishlist")" class="cat-btn">
                                Agregar a wishlist ♡
                            </a>

                            <a href="@Url.Action("Index","Catalogo")" class="cat-btn cat-btn-soft">
                                Volver al catálogo
                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
</section>
