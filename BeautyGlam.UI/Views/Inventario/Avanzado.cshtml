@model List<BeautyGlam.Abstracciones.ModelosParaUI.InventarioDto>

@{
    ViewBag.Title = "Inventario Avanzado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space inv-page">
    <div class="container inv-container">

        <!-- HEADER -->
        <div class="inv-header">
            <h2 class="inv-title">Listado Avanzado</h2>
            <p class="inv-subtitle">
                Filtra stock y búsqueda rápida 💖
            </p>
        </div>

        <!-- FILTROS -->
        <div class="inv-card mb-4">
            <div class="inv-card-head">
                <span class="inv-badge">Filtros</span>
                <h5 class="inv-card-title">Búsqueda inteligente</h5>
                <p class="inv-card-desc">
                    Encuentra productos y detecta bajo stock en segundos.
                </p>
            </div>

            <div class="inv-card-body">
                @using (Html.BeginForm("ListaDeInventario", "Inventario", FormMethod.Get))
                {
                    <div class="row g-3">
                        <div class="col-12 col-md-4">
                            <label class="inv-label">Stock menor o igual a</label>
                            <input type="number"
                                   name="stock"
                                   class="form-control inv-input"
                                   placeholder="Ej: 20" />
                        </div>

                        <div class="col-12 col-md-4">
                            <label class="inv-label">Buscar producto</label>
                            <input type="text"
                                   name="busqueda"
                                   class="form-control inv-input"
                                   placeholder="Nombre del producto" />
                        </div>
                    </div>

                    <div class="inv-center-actions mt-3">
                        <button type="submit" class="btn inv-btn">
                            Buscar ✨
                        </button>

                        <a href="@Url.Action("ListaDeInventario","Inventario")"
                           class="btn inv-btn inv-btn-soft">
                            Volver
                        </a>
                    </div>
                }
            </div>
        </div>

        

    </div>
</section>

