@{
    ViewBag.Title = "Movimientos de Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space inv-page">
    <div class="container inv-container">

        <div class="inv-header">
            <h2 class="inv-title">Movimientos del Producto</h2>
            <p class="inv-subtitle">Historial de entradas y salidas 📈</p>
        </div>

        <div class="inv-table-wrap">
            <table class="table table-striped inv-table align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Cantidad</th>
                        <th>Descripción</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>02/01/2025</td>
                        <td><span class="inv-chip inv-chip-ok">Entrada</span></td>
                        <td><strong style="color:#2f7f62;">+20</strong></td>
                        <td>Compra proveedor</td>
                    </tr>
                    <tr>
                        <td>05/01/2025</td>
                        <td><span class="inv-chip inv-chip-out">Salida</span></td>
                        <td><strong style="color:#8a3b55;">-5</strong></td>
                        <td>Venta online</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index","Inventario")" class="btn inv-btn inv-btn-soft">Volver</a>
        </div>

    </div>
</section>
