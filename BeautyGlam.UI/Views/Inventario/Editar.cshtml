@{
    ViewBag.Title = "Editar Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-inv {
        padding: 6px 14px !important;
        font-size: 14px;
        border-radius: 6px;
    }
</style>

<section class="section-space">
    <div class="container">
        <h2 class="mb-4">Editar Stock</h2>

        <div class="card p-4 shadow-sm">

            <label>Stock actual</label>
            <input type="number" class="form-control mb-3" value="35">

            <div class="mt-3">
                <button class="btn btn-dark btn-sm btn-inv">Guardar cambios</button>
                <a href="@Url.Action("Index","Inventario")"
                   class="btn btn-secondary btn-sm btn-inv ms-2">Cancelar</a>
            </div>

        </div>
    </div>
</section>