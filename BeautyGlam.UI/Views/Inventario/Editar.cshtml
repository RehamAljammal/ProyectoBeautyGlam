@{
    ViewBag.Title = "Editar Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space inv-page">
    <div class="container inv-container">

        <div class="inv-header">
            <h2 class="inv-title">Editar Stock</h2>
            <p class="inv-subtitle">Actualiza el stock de forma segura y clara ✨</p>
        </div>

        <div class="inv-card">
            <div class="inv-card-head">
                <span class="inv-badge">Stock</span>
                <h5 class="inv-card-title">Actualizar cantidad</h5>
                <p class="inv-card-desc">Ingresa el valor actualizado del producto.</p>
            </div>

            <div class="inv-card-body">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-6">
                        <label class="inv-label">Stock actual</label>
                        <input type="number" class="form-control inv-input" value="35" />
                    </div>
                </div>

                <div class="inv-center-actions">
                    <button class="btn inv-btn">Guardar cambios 💾</button>
                    <a href="@Url.Action("Index","Inventario")" class="btn inv-btn inv-btn-soft">Cancelar</a>
                </div>
            </div>
        </div>

    </div>
</section>
