@{
    ViewBag.Title = "Promociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space promo-page">
    <div class="container promo-container">

        <div class="promo-header">
            <h2 class="promo-title">Promociones</h2>
            <p class="promo-subtitle">Crea, edita y controla tus descuentos 💖</p>
        </div>

        <div class="promo-card">
            <div class="promo-card-head">
                <div>
                    <span class="promo-badge">Listado</span>
                </div>

                <a href="@Url.Action("Crear", "Promociones")" class="promo-btn">
                    + Nueva Promoción
                </a>
            </div>

            <div class="promo-table-wrap table-responsive">
                <table class="table table-striped align-middle promo-table">
                    <thead>
                        <tr>
                            <th>Descripción</th>
                            <th>Vigencia</th>
                            <th>% Descuento</th>
                            <th>Estado</th>
                            <th class="text-center" style="width: 300px;">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td><strong style="color:#5c3b6f;">2x1 en perfumes</strong></td>
                            <td>Válido del 01/02/2026 al 28/02/2026</td>
                            <td><strong>30%</strong></td>
                            <td><span class="promo-chip promo-chip-ok">Activo</span></td>
                            <td class="text-center">
                                <div class="promo-actions">
                                    <a href="@Url.Action("Detalles","Promociones", new { id = 1 })"
                                       class="promo-btn promo-btn-soft promo-btn-sm">Ver 👀</a>

                                    <a href="@Url.Action("Editar","Promociones", new { id = 1 })"
                                       class="promo-btn promo-btn-outline promo-btn-sm">Editar ✏️</a>

                                    <a href="@Url.Action("Desactivar","Promociones", new { id = 1 })"
                                       class="promo-btn promo-btn-danger promo-btn-sm">Desactivar 🗑️</a>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td><strong style="color:#5c3b6f;">Descuento en cartera de mano</strong></td>
                            <td>Válido del 01/01/2026 hasta agotar existencias</td>
                            <td><strong>40%</strong></td>
                            <td><span class="promo-chip promo-chip-off">Inactivo</span></td>
                            <td class="text-center">
                                <div class="promo-actions">
                                    <a href="@Url.Action("Detalles","Promociones", new { id = 2 })"
                                       class="promo-btn promo-btn-soft promo-btn-sm">Ver 👀</a>

                                    <a href="@Url.Action("Editar","Promociones", new { id = 2 })"
                                       class="promo-btn promo-btn-outline promo-btn-sm">Editar ✏️</a>

                                    <a href="@Url.Action("Activar","Promociones", new { id = 2 })"
                                       class="promo-btn promo-btn-sm">Activar ✨</a>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </div>

    </div>
</section>
