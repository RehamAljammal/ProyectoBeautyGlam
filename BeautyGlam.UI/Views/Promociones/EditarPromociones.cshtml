@model BeautyGlam.Abstracciones.ModelosParaUI.PromocionesDTO

@{
    ViewBag.Title = "Editar Promoción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space sup-page">
    <div class="container sup-container">

        <div class="sup-header">
            <h2 class="sup-title">Editar Promoción</h2>
            <p class="sup-subtitle">Actualiza la información de la promoción 💖</p>
        </div>

        <div class="sup-card" style="max-width: 820px; margin: 0 auto;">
            <div class="sup-card-head">
                <span class="sup-badge">Edición</span>

                <a href="@Url.Action("ListaDePromociones","Promociones")"
                   class="sup-btn sup-btn-soft">
                    Volver
                </a>
            </div>

            @using (Html.BeginForm("EditarPromociones", "Promociones", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(m => m.id_Promocion)

                <div class="sup-form">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                    <div class="row g-3">

                        <!-- Título -->
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.titulo, new { @class = "form-label sup-label" })
                            @Html.TextBoxFor(m => m.titulo, new
                            {
                                @class = "form-control sup-input",
                                placeholder = "Título de la promoción"
                            })
                            @Html.ValidationMessageFor(m => m.titulo, "", new { @class = "text-danger" })
                        </div>

                        <!-- Descripción -->
                        <div class="col-12">
                            @Html.LabelFor(m => m.descripcion, new { @class = "form-label sup-label" })
                            @Html.TextAreaFor(m => m.descripcion, new
                            {
                                @class = "form-control sup-textarea",
                                rows = 3,
                                placeholder = "Descripción de la promoción"
                            })
                            @Html.ValidationMessageFor(m => m.descripcion, "", new { @class = "text-danger" })
                        </div>

                        <!-- Fecha inicio -->
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.fecha_Inicio, new { @class = "form-label sup-label" })
                            @Html.TextBoxFor(m => m.fecha_Inicio, new
                            {
                                @class = "form-control sup-input",
                                type = "date"
                            })
                            @Html.ValidationMessageFor(m => m.fecha_Inicio, "", new { @class = "text-danger" })
                        </div>

                        <!-- Fecha fin -->
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.fecha_Fin, new { @class = "form-label sup-label" })
                            @Html.TextBoxFor(m => m.fecha_Fin, new
                            {
                                @class = "form-control sup-input",
                                type = "date"
                            })
                            @Html.ValidationMessageFor(m => m.fecha_Fin, "", new { @class = "text-danger" })
                        </div>

                        <!-- Estado -->
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.estado, new { @class = "form-label sup-label" })
                            @Html.DropDownListFor(
                                m => m.estado,
                                new SelectList(
                                    new[]
                                    {
                                        new { Value = true, Text = "Activo" },
                                        new { Value = false, Text = "Inactivo" }
                                    },
                                    "Value",
                                    "Text",
                                    Model.estado
                                ),
                                new { @class = "form-control sup-select" }
                            )
                            @Html.ValidationMessageFor(m => m.estado, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <!-- Botones -->
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button type="submit" class="sup-btn">
                            Guardar cambios ✨
                        </button>
                    </div>

                </div>
            }

        </div>

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
