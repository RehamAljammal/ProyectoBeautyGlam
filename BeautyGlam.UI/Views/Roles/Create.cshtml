@{
    ViewBag.Title = "Crear Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space roles-page">
    <div class="container roles-container">

        <div class="roles-top roles-top-center">
            <div class="text-center">
                <h2 class="roles-title">Crear Rol</h2>
                <p class="roles-subtitle">Define un nuevo rol para tu sistema 💫</p>
            </div>
        </div>

        <div class="roles-card roles-form-card">
            <form>

                <div class="mb-3">
                    <label class="form-label roles-label">Nombre del Rol</label>
                    <input type="text" class="form-control roles-input" placeholder="Ej: Administrador" />
                </div>

                <div class="mb-3">
                    <label class="form-label roles-label">Descripción</label>
                    <textarea class="form-control roles-input" rows="4" placeholder="Describe el acceso de este rol..."></textarea>
                </div>

                <div class="roles-form-actions">
                    <button class="btn roles-btn">Guardar</button>
                    <a href="/Roles" class="btn roles-btn-soft">Cancelar</a>
                </div>

            </form>
        </div>

    </div>
</section>

