
@{
    ViewBag.Title = "Permisos del Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">

    <section class="page-header-area pt-10 pb-9" data-bg-color="#FFF3DA">
        <div class="container">
            <h2 class="page-header-title">Permisos del Rol: Administrador</h2>
        </div>
    </section>

    <section class="section-space">
        <div class="container">

            <div class="shadow-sm border p-4 rounded-3 bg-white">

                <form>

                    <table class="table table-bordered align-middle">
                        <thead class="table-secondary">
                            <tr>
                                <th>Permiso</th>
                                <th class="text-center">Asignado</th>
                            </tr>
                        </thead>

                        <tbody>

                            <tr>
                                <td>Crear Usuarios</td>
                                <td class="text-center"><input type="checkbox" checked /></td>
                            </tr>

                            <tr>
                                <td>Editar Productos</td>
                                <td class="text-center"><input type="checkbox" /></td>
                            </tr>

                            <tr>
                                <td>Ver Ventas</td>
                                <td class="text-center"><input type="checkbox" checked /></td>
                            </tr>

                            <tr>
                                <td>Gestionar Reservas</td>
                                <td class="text-center"><input type="checkbox" /></td>
                            </tr>

                        </tbody>
                    </table>

                    <button class="btn btn-dark px-4 py-2">Guardar</button>
                    <a href="/Roles" class="btn btn-secondary px-4 py-2">Cancelar</a>

                </form>

            </div>

        </div>
    </section>

</main>
