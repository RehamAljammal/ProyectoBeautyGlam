@{
    ViewBag.Title = "Permisos del Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space roles-page">
    <div class="container roles-container">

        <div class="roles-top roles-top-center">
            <div class="text-center">
                <h2 class="roles-title">Permisos del Rol: Administrador</h2>
                <p class="roles-subtitle">Activa o desactiva permisos con un clic 🔒</p>
            </div>
        </div>

        <div class="roles-card">
            <form>

                <div class="table-responsive">
                    <table class="table roles-table roles-perm-table align-middle">
                        <thead>
                            <tr>
                                <th>Permiso</th>
                                <th class="text-center" style="width: 180px;">Asignado</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td><strong class="roles-strong">Crear Usuarios</strong></td>
                                <td class="text-center">
                                    <label class="roles-switch">
                                        <input type="checkbox" checked>
                                        <span class="roles-slider"></span>
                                    </label>
                                </td>
                            </tr>

                            <tr>
                                <td><strong class="roles-strong">Editar Productos</strong></td>
                                <td class="text-center">
                                    <label class="roles-switch">
                                        <input type="checkbox">
                                        <span class="roles-slider"></span>
                                    </label>
                                </td>
                            </tr>

                            <tr>
                                <td><strong class="roles-strong">Ver Ventas</strong></td>
                                <td class="text-center">
                                    <label class="roles-switch">
                                        <input type="checkbox" checked>
                                        <span class="roles-slider"></span>
                                    </label>
                                </td>
                            </tr>

                            <tr>
                                <td><strong class="roles-strong">Gestionar Reservas</strong></td>
                                <td class="text-center">
                                    <label class="roles-switch">
                                        <input type="checkbox">
                                        <span class="roles-slider"></span>
                                    </label>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                </div>

                <div class="roles-form-actions mt-3">
                    <button class="btn roles-btn">Guardar</button>
                    <a href="/Roles" class="btn roles-btn-soft">Cancelar</a>
                </div>

            </form>
        </div>

    </div>
</section>
