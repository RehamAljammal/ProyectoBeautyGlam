@{
    ViewBag.Title = "Asignar Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space users-page">
    <div class="container users-container">

        <div class="users-top users-top-center">
            <div class="text-center">
                <h2 class="users-title">Asignar Rol a Usuario</h2>
                <p class="users-subtitle">Cambia el rol sin complicarte 🔒</p>
            </div>
        </div>

        <div class="users-card users-form-card">
            <form>

                <div class="users-minihead">
                    <span class="users-badge">Usuario</span>
                    <h4 class="users-mini-title">Ana Rodríguez</h4>
                    <p class="users-mini-sub">Selecciona el rol que deseas asignar.</p>
                </div>

                <div class="mb-3">
                    <label class="form-label users-label">Seleccionar Rol</label>
                    <select class="form-control users-input">
                        <option selected>Administrador</option>
                        <option>Cliente</option>
                        <option>Vendedor</option>
                    </select>
                </div>

                <div class="users-form-actions">
                    <button class="btn users-btn" type="submit">Guardar</button>
                    <a href="/Usuarios" class="btn users-btn-soft">Cancelar</a>
                </div>

            </form>
        </div>

    </div>
</section>
