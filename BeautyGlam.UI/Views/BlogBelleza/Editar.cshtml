@{
    ViewBag.Title = "Editar Artículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space">
    <div class="container">
        <h3 class="mb-4">Editar artículo</h3>

        <div class="mb-3">
            <label>Título</label>
            <input type="text" class="form-control"
                   value="Rutina básica de skincare para principiantes" />
        </div>

        <div class="mb-3">
            <label>Contenido</label>
            <textarea class="form-control" rows="6">
Contenido del artículo...
            </textarea>
        </div>

        <button class="btn btn-dark btn-sm me-2">Guardar cambios</button>
        <a href="@Url.Action("Index","BlogBelleza")"
           class="btn btn-secondary btn-sm">
            Volver
        </a>
    </div>
</section>