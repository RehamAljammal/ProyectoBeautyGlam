@{
    ViewBag.Title = "Blog de Belleza";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space blog-page">
    <div class="container blog-container">

        <div class="blog-header">
            <h2 class="blog-title">Blog de Belleza</h2>
            <p class="blog-subtitle">Tips, rutinas y recomendaciones para verte y sentirte increíble ✨</p>
        </div>

        <div class="text-center mb-4">
            <a href="@Url.Action("Publicar","BlogBelleza")" class="btn blog-btn">
                Publicar nuevo artículo ✍️
            </a>
        </div>

        <!-- Card 1 -->
        <div class="blog-card">
            <h5 class="blog-card-title">Rutina básica de skincare para principiantes</h5>
            <div class="blog-meta">Publicado el 10/03/2025</div>

            <div class="blog-actions">
                <a href="@Url.Action("Detalle","BlogBelleza", new { id = 1 })"
                   class="btn blog-btn blog-btn-soft">
                    Ver 👀
                </a>

                <a href="@Url.Action("Editar","BlogBelleza", new { id = 1 })"
                   class="btn blog-btn blog-btn-soft">
                    Editar ✨
                </a>

                <button class="btn blog-btn blog-btn-danger">
                    Desactivar 🗑
                </button>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="blog-card">
            <h5 class="blog-card-title">Cómo elegir tu base según tu tono</h5>
            <div class="blog-meta">Publicado el 05/03/2025</div>

            <div class="blog-actions">
                <a href="@Url.Action("Detalle","BlogBelleza", new { id = 2 })"
                   class="btn blog-btn blog-btn-soft">
                    Ver 👀
                </a>

                <a href="@Url.Action("Editar","BlogBelleza", new { id = 2 })"
                   class="btn blog-btn blog-btn-soft">
                    Editar ✨
                </a>

                <button class="btn blog-btn blog-btn-danger">
                    Desactivar 🗑
                </button>
            </div>
        </div>

    </div>
</section>
