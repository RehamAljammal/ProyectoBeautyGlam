@{
    ViewBag.Title = "Detalle del Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pedidoId = ViewBag.IdPedido;
}

<section class="section-space">
    <div class="container">

        <h2 class="text-center mb-4">Detalle del pedido #@pedidoId</h2>

        <div class="shadow-sm border rounded-3 p-4 bg-white mb-4">

            <h4 class="mb-3">Información del pedido</h4>

            <p><strong>ID del pedido:</strong> @pedidoId</p>
            <p><strong>Fecha de compra:</strong> 10/02/2025</p>
            <p><strong>Dirección de entrega:</strong> San José, Costa Rica</p>
            <p><strong>Método de pago:</strong> Tarjeta Visa</p>

            <hr />

            <h5 class="mb-3">Estado del pedido</h5>

            <div class="mb-4">
                <div class="progress" style="height: 12px;">
                    <div class="progress-bar bg-dark" style="width: 70%;"></div>
                </div>

                <div class="d-flex justify-content-between mt-2">
                    <span>Procesado</span>
                    <span>Empacado</span>
                    <span>En camino</span>
                    <span class="text-muted">Entregado</span>
                </div>
            </div>

            <hr />

            <h5 class="mb-3">Productos del pedido</h5>

            <div class="row g-3">

                <!-- Producto 1 -->
                <div class="col-12 d-flex align-items-center border rounded-3 p-3">
                    <img src="https://i5.walmartimages.com/seo/Glow-Recipe-Plum-Plump-Hyaluronic-Cream-67oz-20ml_fcabe71b-8928-4ed9-9fa0-e9b11103fbdf.2be8b441a3ae8b859d2b23d1d4414833.jpeg"
                         width="80" class="rounded me-3" />
                    <div>
                        <h6 class="mb-1">Crema hidratante Glow</h6>
                        <p class="text-muted mb-1">Cantidad: 1</p>
                        <p class="fw-bold">$32.00</p>
                    </div>
                </div>

                <!-- Producto 2 -->
                <div class="col-12 d-flex align-items-center border rounded-3 p-3">
                    <img src="https://m.media-amazon.com/images/I/81+OpYuvH6L._AC_UF894,1000_QL80_.jpg"
                         width="80" class="rounded me-3" />
                    <div>
                        <h6 class="mb-1">Kit limpieza facial</h6>
                        <p class="text-muted mb-1">Cantidad: 1</p>
                        <p class="fw-bold">$45.00</p>
                    </div>
                </div>

            </div>

        </div>

        <a href="@Url.Action("Seguimiento","Perfil")"
           class="btn btn-secondary w-100">
            Volver al seguimiento
        </a>

    </div>
</section>
