@{
    ViewBag.Title = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space prof-page">
    <div class="container prof-container">

        <div class="prof-header">
            <h2 class="prof-title">Editar Perfil</h2>
            <p class="prof-subtitle">Actualiza tus datos cuando lo necesites ✨</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-7">
                <div class="prof-card">

                    <div class="prof-card-head">
                        <span class="prof-badge">Cuenta</span>
                        <h4 class="prof-card-title">Información personal</h4>
                        <p class="prof-card-desc">Campos básicos para mantener tu cuenta al día.</p>
                    </div>

                    <div class="prof-card-body">
                        <form>

                            <div class="mb-3">
                                <label class="prof-label">Nombre</label>
                                <input class="form-control prof-input" placeholder="Ingrese su nombre" />
                            </div>

                            <div class="mb-3">
                                <label class="prof-label">Correo</label>
                                <input type="email" class="form-control prof-input" placeholder="usuario@correo.com" />
                            </div>

                            <div class="mb-3">
                                <label class="prof-label">Contraseña (opcional)</label>
                                <input type="password" class="form-control prof-input" placeholder="Nueva contraseña" />
                            </div>

                            <button class="btn prof-btn prof-btn-block mt-2">Guardar Cambios 💾</button>

                        </form>
                    </div>

                </div>
            </div>
        </div>

    </div>
</section>
