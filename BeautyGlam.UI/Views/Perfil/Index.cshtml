@{
    ViewBag.Title = "Mi Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-space prof-page">
    <div class="container prof-container">

        <div class="prof-header">
            <h2 class="prof-title">Mi Perfil</h2>
            <p class="prof-subtitle">Administra tu información, tus rutinas y recomendaciones 💖</p>
        </div>

        <div class="row g-4">

            <!-- Foto + Info -->
            <div class="col-lg-4">
                <div class="prof-card">
                    <div class="prof-card-head text-center">
                        <span class="prof-badge">Perfil</span>
                        <h4 class="prof-card-title" style="margin-bottom:0;">Nombre del Usuario</h4>
                        <p class="prof-card-desc">usuario@correo.com</p>
                    </div>

                    <div class="prof-card-body text-center">
                        <img src="AQUI-TU-FOTO" class="prof-avatar mb-3" alt="Foto de perfil" />

                        <a href="@Url.Action("Edit","Perfil")" class="btn prof-btn prof-btn-block">
                            Editar Perfil ✨
                        </a>
                    </div>
                </div>
            </div>

            <!-- Opciones -->
            <div class="col-lg-8">
                <div class="prof-card">
                    <div class="prof-card-head">
                        <span class="prof-badge">Opciones</span>
                        <h4 class="prof-card-title">Opciones del Perfil</h4>
                        <p class="prof-card-desc">Rutinas, recomendaciones, historial y pedidos.</p>
                    </div>

                    <div class="prof-card-body">
                        <div class="prof-list">
                            <a href="@Url.Action("Rutinas","Perfil")" class="prof-link">
                                Rutinas Guardadas <span>›</span>
                            </a>
                            <a href="@Url.Action("Recomendaciones","Perfil")" class="prof-link">
                                Recomendaciones Personalizadas <span>›</span>
                            </a>
                            <a href="@Url.Action("Historial","Perfil")" class="prof-link">
                                Historial de Actividad / Compras <span>›</span>
                            </a>
                            <a href="@Url.Action("Seguimiento","Perfil")" class="prof-link">
                                Seguimiento y Progreso <span>›</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
</section>
