<!--===================== SLIDER PRINCIPAL =====================-->
<section class="hero-slider-area position-relative">
    <div class="swiper hero-slider-container">
        <div class="swiper-wrapper">

            <!-- Slide 1 -->
            <div class="swiper-slide hero-slide-item">
                <div class="container">
                    <div class="row align-items-center position-relative">

                        <div class="col-12 col-md-6">
                            <div class="hero-slide-content">


                                <h2 class="hero-slide-title">FRESCURA NATURAL</h2>
                                <p class="hero-slide-desc">
                                    Productos pensados para resaltar tu belleza auténtica y real.
                                </p>

                                <a class="btn btn-border-dark" href="/Shop/Product">COMPRAR AHORA</a>

                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="hero-slide-thumb">
                                <img src="https://shengxhi.com/static/picture/slider1.webp" width="841" height="832" alt="">
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <!-- Slide 2 -->
            <div class="swiper-slide hero-slide-item">
                <div class="container">
                    <div class="row align-items-center position-relative">

                        <div class="col-12 col-md-6">
                            <div class="hero-slide-content">

                                <div class="hero-slide-text-img">
                                    <img src="~/assets/images/slider/text-theme.webp" width="427" height="232" alt="">
                                </div>

                                <h2 class="hero-slide-title">CREMA FACIAL</h2>
                                <p class="hero-slide-desc">
                                    Hidratación profunda para una piel suave, luminosa y saludable.
                                </p>

                                <a class="btn btn-border-dark" href="/Shop/Product">COMPRAR AHORA</a>

                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="hero-slide-thumb">
                                <img src="~/assets/images/slider/slider2.webp" width="841" height="832" alt="">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="hero-slide-text-shape">
                    <img src="~/assets/images/slider/text1.webp" width="70" height="955" alt="">
                </div>
            </div>

        </div>

        <div class="hero-slider-pagination"></div>
    </div>

    <div class="hero-slide-social-media">
        <a href="#"><i class="fa fa-pinterest-p"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-facebook"></i></a>
    </div>
</section>
